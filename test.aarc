## a=grep.
## a=-E.
## a=etc....
## a=-i.
## a=dd.
# ew
#     ?   -x "/usr/bin/rg" or -x "/usr/local/bin/rg" or -x "$ENV{HOME}/bin/rg"
#     args rg -uu -g '!.git' -S
ew %
    ?   "%1" !~ /[A-Z]/
    ew -i %1
ew
    ?   $ENV{_tty}
    ew -r
ew
    args grep -E etc...

