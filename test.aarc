# ---- queue inversion
#> t13a
## 1e: a b c
## 2: d
t13a
    _t13a_1 a b c
    _t13a_2 d
_t13a_1
    _t13a_1e
_t13a_1e
    echo 1e:
_t13a_2
    echo 2:
#> t13b
## 1e: a
## 1e: b
## 1e: c
## 2: d
